<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Students.Add.AddGroup.AddGroupPage" BackgroundColor="WhiteSmoke" NavigationPage.HasNavigationBar="False" >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <Entry Placeholder="Группа" Text="{Binding NewGroupName}" TextColor="Black" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Button Text="Назад" Clicked="BackButton_Clicked" />
                    <Button Text="Добавить" Clicked="AddButton_Clicked" />
                </StackLayout>
             
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>